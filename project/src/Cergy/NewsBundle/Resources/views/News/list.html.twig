{% extends "::base.html.twig" %}
{% block title %} News {% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/cergynews/css/bootstrap.min.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="{{ asset('bundles/cergynews/css/news.css') }}" type="text/css" media="all" />

{% endblock %}
{% block body %}
    {{ parent() }}
    <h1>My news</h1>
{% for n in news %}
<div class="row">
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img data-src="holder.js/300x300">
            <div class="caption">
                <h3>{{ n.title }}</h3>
        <p>{{ n.content }}</p>
        <p><a href="#" class="btn btn-primary" role="button">Created : </a>     {{ n.createdAt|date('d-m-Y h:i') }}</p>
        <p><a href="#" class="btn btn-primary" role="button">Updated : </a>     {{ n.updatedAt|date('d-m-Y h:i') }}</p>
        </div>
    </div>
</div>
{% endfor %}
{% endblock %}
